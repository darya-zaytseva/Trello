<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="650" prefWidth="750" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AutomationController">
    <top>
        <VBox spacing="5" style="-fx-padding: 20 20 10 20; -fx-background-color: #0079bf;">
            <Label style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: white;" text="Автоматизация задач" />
            <Label style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14;" text="Настройте правила для автоматических действий" />
        </VBox>
    </top>
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <VBox spacing="15" style="-fx-background-color: #f4f5f7; -fx-padding: 15; -fx-background-radius: 5;">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #172b4d; -fx-font-size: 16;" text="Создать новое правило" />
                <VBox spacing="10">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #172b4d;" text="Когда:" />
                    <ComboBox fx:id="triggerCombo" style="-fx-pref-height: 35;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Задача создана" />
                                <String fx:value="Задача перемещена" />
                                <String fx:value="Срок истек" />
                                <String fx:value="Изменен приоритет" />
                                <String fx:value="Задача выполнена" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
                <VBox spacing="10">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #172b4d;" text="Тогда:" />
                    <ComboBox fx:id="actionCombo" style="-fx-pref-height: 35;">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Добавить метку" />
                                <String fx:value="Изменить приоритет" />
                                <String fx:value="Переместить в колонку" />
                                <String fx:value="Назначить участника" />
                                <String fx:value="Установить срок" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>
                <VBox spacing="10">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #172b4d;" text="Параметры:" />
                    <TextField fx:id="parametersField" promptText="Параметры действия..." style="-fx-pref-height: 35;" />
                </VBox>
                <VBox spacing="10">
                    <Label style="-fx-font-weight: bold; -fx-text-fill: #172b4d;" text="Описание правила:" />
                    <TextArea fx:id="ruleDescriptionArea" editable="false" prefHeight="80" style="-fx-font-size: 13; -fx-text-fill: #5e6c84;" />
                </VBox>
                <Button fx:id="createRuleButton" onAction="#createRule" style="-fx-background-color: #0079bf; -fx-text-fill: white; -fx-font-weight: bold;" text="Создать правило" />
            </VBox>
            <VBox spacing="10">
                <Label style="-fx-font-weight: bold; -fx-text-fill: #172b4d; -fx-font-size: 16;" text="Активные правила автоматизации" />
                <TableView fx:id="rulesTable" prefHeight="250">
                    <columns>
                        <TableColumn fx:id="ruleColumn" prefWidth="300" text="Правило" />
                        <TableColumn fx:id="statusColumn" prefWidth="100" text="Статус" />
                        <TableColumn fx:id="actionsColumn" prefWidth="150" text="Действия" />
                    </columns>
                </TableView>
                <Label fx:id="statsLabel" style="-fx-text-fill: #5e6c84; -fx-font-size: 14;" />
            </VBox>

        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 15;" />
    </bottom>
</BorderPane>